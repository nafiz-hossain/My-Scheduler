<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/gray"
    android:layout_height="match_parent"
    android:backgroundTint="@color/background_color">

    <TextView
        android:id="@+id/nameEditText"
        android:hint=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/surNameEditText"
        android:hint=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameEditText"/>

    <View
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_below="@+id/surNameEditText"
        android:layout_height="1dp"
        android:id="@+id/view"></View>

    <Button
        android:id="@+id/postFeedButton"
        android:layout_width="200dp"
        android:background="@color/darkBlue"
        android:text="Announce"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/cardList"
        android:layout_width="match_parent"
        android:background="@color/white_greyish"
        android:layout_height="match_parent"
        android:layout_below="@+id/postFeedButton"
        android:layout_toRightOf="@+id/surNameEditText"
        android:layout_toEndOf="@+id/surNameEditText"
        android:layout_marginTop="22dp">


    </android.support.v7.widget.RecyclerView>
</RelativeLayout>